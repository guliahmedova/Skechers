@model Offer

<div class="container pt-5" style="background-color: #cff4fc;">
    <div class="row">
        <div class="col-lg-12">
            <form method="post" asp-action="edit" asp-controller="offer" enctype="multipart/form-data">
                <div class="form-group my-5">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Name..." />
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageFile">ImageFile</label>
                    <input asp-for="ImageFile" class="form-control" />
                    <span class="text-danger" asp-validation-for="ImageFile"></span>

                    <input type="hidden" name="Image" value="@Model.ImageFile" />
                    <img width="100" src="~/uploads/products/@Model.Image" alt="FOTO" />
                </div>
                <div class="col-lg-12 d-flex justify-content-center">
                    <button type="submit" class="btn btn-info mb-5 mt-5">Edit</button>
                </div>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            </form>
        </div>
    </div>
</div>


@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial.cshtml")
}