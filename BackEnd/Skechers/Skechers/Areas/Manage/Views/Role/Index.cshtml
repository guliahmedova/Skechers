@{
    ViewData["Title"] = "Role Panel";
    int count = 0;
}
@model List<IdentityRole>

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-info table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Action</th>
                        <th scope="col">
                            <a class="btn btn-outline-primary" asp-action="create">
                                <i class="fa-solid fa-circle-plus"></i>
                            </a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td>@role.Name</td>
                            <td>
                                <a asp-action="delete" asp-route-id="@role.Id" class="btn btn-outline-danger delete-btn">
                                    <i class="fa-solid fa-trash fa-shake"></i>
                                </a>
                                <a asp-action="edit" asp-route-id="@role.Id" class="btn btn-outline-warning">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                            </td>
                            <td></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

}