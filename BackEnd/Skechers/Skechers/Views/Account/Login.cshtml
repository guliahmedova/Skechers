@model MemberLoginViewModel
<!-- Main Start -->
<main>
    <section id="login">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 mb-5">
                    <div class="title">
                        ÜYE GİRİŞİ
                    </div>
                </div>

                <div class="col-lg-12">
                    <form class="row" asp-action="login" method="post">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group row mb-4">
                                        <div class="col-lg-3 col-12 mt-3">
                                            <label asp-for="UserName" class="mb-3">Kullanıcı ismi*:</label>
                                        </div>
                                        <div class="col-lg-9 col-12">
                                            <input asp-for="UserName" type="text" id="email" class="form-control" autocomplete="off" placeholder="Kullanıcı adınızı giriniz">
                                            <span class="text-danger" asp-validation-for="UserName"></span>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <div class="col-lg-3 col-12 mt-3">
                                            <label asp-for="Password" class="mb-3">Şifre:</label>
                                        </div>
                                        <div class="col-lg-9 col-12">
                                            <input asp-for="Password" class="form-control" id="password" autocomplete="off" placeholder="Şifre giriniz">
                                            <span class="text-danger" asp-validation-for="Password"></span>
                                        </div>
                                    </div>

                                    <div class="col-lg-3"></div>
                                    <div class="col-lg-9">
                                        <div class="text-danger d-flex justify-content-center ms-5 ps-3 mt-2" asp-validation-summary="ModelOnly"></div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-lg-3 col-12">
                                        </div>
                                        <div class="col-lg-9 col-12 mb-4 mt-3" id="checkbox">
                                            <div class="div d-flex">
                                            </div>
                                            <span id="check-link" class="mt-3"><a asp-action="forgot" asp-controller="account">Şifremi Unuttum</a></span>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <div class="col-lg-3 col-12"></div>
                                        <div class="col-lg-9 col-12 mb-4" id="texts">
                                            Oturum açarak Skechers'ın <a href="#">Gizlilik Politikası</a>'nı ve <a href="#">Kullanım Şartları</a>'nı
                                            kabul etmiş olursun.
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <div class="col-lg-3 col-12"></div>
                                        <div class="col-lg-9 col-12">
                                            <button type="submit" class="btn btn-info px-5" id="login-btn">GİRİŞ YAP</button>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <div class="col-lg-3 col-12"></div>
                                        <div class="col-lg-9 col-12 my-3" id="veya">
                                            <span>-veya-</span>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <div class="col-lg-3 col-12"></div>
                                        <div class="col-lg-9 col-12" id="register-part">
                                            <span>
                                                Üye değil misin? <a asp-action="register" asp-controller="account">Hemen üye ol</a>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</main>
<!-- Main End -->

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}