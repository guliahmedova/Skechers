@model MemberRegisterViewModel
<!-- Main Start -->
<main>
    <section id="register">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 mb-5 mt-5">
                    <div class="title">ÜYE OL</div>
                </div>
                <form class="row" asp-action="register" method="post">
                    <div class="card-body">
                        <div class="col-lg-12">

                            <div class="form-group row mb-4">
                                <div class="col-lg-3 my-3">
                                    <label asp-for="FullName">
                                        Ad Soyad*:
                                    </label>
                                </div>
                                <div class="col-lg-9">
                                    <input type="text"
                                           asp-for="FullName"
                                           class="form-control"
                                           autocomplete="off"
                                           placeholder="Ad Soyad giriniz" />
                                    <span class="text-danger" asp-validation-for="FullName"></span>
                                </div>
                            </div>

                            <div class="form-group row mb-4">
                                <div class="col-lg-3 my-3">
                                    <label asp-for="UserName">Kullanıcı ismi*:</label>
                                </div>
                                <div class="col-lg-9">
                                    <input type="tel"
                                           asp-for="UserName"
                                           class="form-control"
                                           autocomplete="off"
                                           placeholder="Kullanıcı Adınızı giriniz" />
                                    <span class="text-danger" asp-validation-for="UserName"></span>
                                </div>
                            </div>

                            <div class="form-group row mb-4">
                                <div class="col-lg-3 my-3">
                                    <label asp-for="Email">E-Posta*:</label>
                                </div>
                                <div class="col-lg-9 col-12">
                                    <input type="email"
                                           id="email"
                                           asp-for="Email"
                                           autocomplete="off"
                                           class="form-control"
                                           placeholder="E-postanızı girin" />
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-lg-3 my-3">
                                    <label asp-for="Password">Şifre:</label>
                                </div>
                                <div class="col-lg-9" id="passw">
                                    <input type="password"
                                           asp-for="Password"
                                           class="form-control"
                                           id="passwordregister"
                                           autocomplete="off"
                                           placeholder="Şifre giriniz" />
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                    <div href="#" class="icon" onclick="showHide()">
                                        <i class="fa-solid fa-eye"></i>
                                        <i class="fa-solid fa-eye-slash"></i>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-lg-3 mt-4">
                                    <label asp-for="RepeatPassword">Şifre Tekrarı*:</label>
                                </div>
                                <div class="col-lg-9">
                                    <input type="password"
                                           class="form-control mt-3"
                                           id="repaetpassword"
                                           autocomplete="off"
                                           asp-for="RepeatPassword"
                                           placeholder="Şifre tekrarını giriniz" />
                                    <span class="text-danger" asp-validation-for="RepeatPassword"></span>
                                </div>
                            </div>
                            <div class="form-group row mt-1">
                                <div class="col-lg-3"></div>
                                <div class="col-lg-9">
                                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                </div>
                            </div>
                            <div class="form-group row mt-3">
                                <div class="col-lg-3"></div>
                                <div class="col-lg-9">
                                    <button type="submit"
                                            class="btn btn-info px-5"
                                            id="login-btn">
                                        ÜYE OL
                                    </button>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-lg-3"></div>
                                <div class="col-lg-9 my-3" id="veya">
                                    <span>-veya-</span>
                                </div>
                            </div>

                            <div class="form-group row mb-5">
                                <div class="col-lg-3"></div>
                                <div class="col-lg-9" id="register-part">
                                    <span>
                                        Zaten üye misin?<a asp-action="login" asp-controller="account">Hemen giriş yap </a>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</main>
<!-- Main End -->

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script src="~/js/_register.js"></script>
}