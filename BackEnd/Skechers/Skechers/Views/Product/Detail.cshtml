                                <i style="color:gray" class="fa-solid fa-star"></i>
                                <i style="color:gray" class="fa-solid fa-star"></i>

                            </div>
                                }
                                @if (item.Rate == 3)
                                {
                            <div style="color:gold">
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i style="color:gray" class="fa-solid fa-star"></i>
                                <i style="color:gray" class="fa-solid fa-star"></i>

                            </div>
                                }
                                @if (item.Rate == 4)
                                {
                            <div style="color:gold">
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i style="color:gray" class="fa-solid fa-star"></i>
                            </div>
                                }
                                @if (item.Rate == 5)
                                {
                            <div style="color:gold"> 
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                            </div>
                                }
